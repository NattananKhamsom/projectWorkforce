package com.clinicappointment.util;

import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;

/**
 * นี่คือคลาสสำหรับใช้สร้าง BCrypt hash ของรหัสผ่าน
 * ใช้สำหรับรันเพื่อสร้างรหัสผ่านใหม่ไปใส่ใน data.sql เท่านั้น
 * ไม่ใช่ส่วนหนึ่งของแอปพลิเคชันหลัก
 */
public class PasswordEncoderUtil {

    public static void main(String[] args) {
        BCryptPasswordEncoder encoder = new BCryptPasswordEncoder();
        String rawPassword = "1234";
        String encodedPassword = encoder.encode(rawPassword);

        // ผลลัพธ์ที่ได้จะถูกนำไปใช้ในไฟล์ data.sql
        System.out.println("====================================================================");
        System.out.println("BCrypt hash for '" + rawPassword + "': " + encodedPassword);
        System.out.println("====================================================================");
    }
}
